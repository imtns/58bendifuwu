/**加载效果**/
.im-loading{
  height:30rpx;
  text-align: center;
  font-size: 26rpx;
  color:#9b9b9b;
  line-height:30rpx;
}
.im-msglist-loading{
    position:absolute;
    top:0;
    right:0;
    left:0;
    z-index:999;
    background:transparent;
}

.im-loading .icon {
  width: 36rpx;
  height: 30rpx;
  background: transparent url("data:image/gif;base64,") no-repeat scroll 50%;
  margin: 0 auto;
}

.im-msglist-loading .icon{
    margin-left:50%;
}




