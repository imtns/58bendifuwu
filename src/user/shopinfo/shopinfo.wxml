<view scroll-y="true" class="body">
    <view class="item-avatar-lg">
        <image src="{{shop.logo}}" background-size="cover" class="shop_avatar"></image>
        <view class="text_box padding">
            <view class="flex">
                <text class="shop_name">{{shop.name}} </text>
                <image wx:if="{{shop.sex==1}}" src="/image/s1.png" id="gender_icon"></image>
                <image wx:if="{{shop.sex==2}}" src="/image/s2.png" id="gender_icon"></image>
            </view>
            <view class="flex">
                <text class="shop_label">{{shop.label}}</text>
            </view>
        </view>
        
    </view>
    <view class="main">
        <view class="item-avatar-xs" style="display:block;" wx:if="{{shop.intro== null ? false : true}}">
            <text class="service_title" style="width:100%;">服务介绍</text>
            <view class="service_intro {{serviceIntroduceContentPackup?'service_introduce_content_packup':''}}">{{shop.intro== null ? "":shop.intro}}</view>
            <view class="service_introduce_packup_switch" bindtap="serviceIntroducePackupSwitch">
              <text>{{serviceIntroduceContentPackup?'展开查看全文':'收起全文'}}</text>
              <image  src="/image/{{serviceIntroduceContentPackup?'content_unpack_icon':'content_packup_icon'}}.png" class="content_pack_icon" />
            </view>
        </view>
        <view class="graySpace"></view>
        <view class="info_item_con">
            <text class="shop_address_title">公司地址</text>
            <text class="shop_address">{{shop.address}}</text>
        </view>
    </view>
     <view class="button-sp-area">
        <button wx:if="{{shop.id!=5}}" bindtap="call_tick" class="weui-btn call_btn"><image src="/image/tele_icon_w.png" class="tele_icon"/>电话沟通</button>
        <button bindtap="sendMsg" class="weui-btn wx_btn"><image src="/image/detail_chat.png" class="wx_icon"/>微聊沟通</button>
    </view>
    <!--打电话弹层  s-->
    <view class="call_mask" hidden="{{call.hidden}}">
      <view class="call_con">
        <text class="call_title">拨打电话</text>
        <text class="call_number">{{shop.phone}}</text>
        <text class="call_text">(电话<text class="call_tick">{{call.tick}}</text>秒后失效，请尽快拨打)</text>
        <view class="call_btn_con">
          <text class="call_left_btn" bindtap="cancel_call">取消</text>
          <text class="call_right_btn" bindtap="call">拨打</text>
        </view>
      </view>
    </view>
    <!--打电话弹层  e-->
</view>