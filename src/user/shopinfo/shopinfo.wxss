.button-sp-area{
    margin: 0 auto;
    padding-top: 15px;
    width: 90%;
    height: 150px;
    margin-top: 20px;
}
.intro{
    height:120px;
    width:100%;
    line-height:20px;
    margin-left: 10rpx;
    top: 2px;
    text-indent:28px;
}
.phone{
    height:28px;
    margin-left: 10rpx;
    top: 2px;
}
.addr{
    height:30px;
    margin-left: 10rpx;
    top: 2px;
}
.shop_avatar{
    border-radius: 50% !important;
}
.shop_name{
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #333333;
}
.shop_label{
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #999999;
}
.body, page{
    background: #efeff4;
}
.item-avatar-lg{
    background: white;
    margin-bottom: 20rpx;
}
.main{
    background: white;
}
.service_title{
    font-family: .PingFangSC-Regular;
    font-size: 26rpx;
    border-bottom: 1rpx solid #efeff4;
    display: block;
    line-height: 90rpx;
}
.service_intro{
    font-family: .PingFangSC-Regular;
    font-size: 26rpx;
    color: #333333;
    letter-spacing: 0;
    line-height: 46rpx;
    padding-top: 20rpx;
    overflow-y: hidden;
}
.service_introduce_content_packup{
  max-height: 90rpx;
}
.content_pack_icon{
  width: 18rpx !important;
  height: 10rpx !important;
  padding-left: 10rpx;
  vertical-align: 2rpx;
}
.service_introduce_packup_switch{
}
.service_introduce_packup_switch>text{
  display: inline;
  font-size: 26rpx;
  color: #1AAD19;
  line-height: 30rpx;
}
.address_con{
    padding: 0;
    height: 85rpx;
}
.address_title{
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #333333;
    line-height: 85rpx;
    height: 85rpx;
}
.address_text{
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #333333;
    line-height: 85rpx;
    height: 85rpx;
}
.tele_icon, .wx_icon{
    margin-right: 12rpx;
    vertical-align: -6rpx;
}
.tele_icon{
    width: 44rpx;
    height: 44rpx;
}
.wx_icon{
  width:60rpx;
  height:60rpx;
   vertical-align: -15rpx;
}
.call_btn{
    background: #FF552E;
    color: #fff;
}
.wx_btn{
    background: #fff;
    color:#FF552E;
    border: solid 1px #FF552E;
}
.graySpace{
    height: 20rpx;
    min-height: 0;
}
.shop_address{
    line-height: 50rpx;
    flex-shrink: 1;
    flex-grow: 1;
    font-size: 26rpx;
    color: #333;
    padding: 20rpx 0;
}
.shop_address_title, .shop_accept_title{
    width: 160rpx;
    height: 90rpx;
    line-height: 90rpx;
    flex-shrink: 0;
    flex-grow: 0;
}
.info_item_con{
    margin-left: 30rpx;
    padding-right: 30rpx;
    font-size: 30rpx;
    border-bottom: 1px solid #efeff4;
    display: flex;
}
.shop_accept_switch{
}
.shop_accept_con{
    display: flex;
    justify-content: space-between;
    align-items: center;
}