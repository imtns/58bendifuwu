<template name="image-item">
    <view class="im-msg im-msg-image {{item.ismine==='true'?'im-msg-me':'im-msg-other'}}" id="msg-{{index}}">
        <view class="im-msg-time {{item.is_show_time === 'false'? 'im-msg-time-hide':''}}"><view class="im-msg-time-content">{{item.format_time}}</view></view>
      <view class="im-msg-main">
        <view class="im-msg-content" style="background:url({{item.content.thumb_url}}) no-repeat 0 0; width:{{item.content.image_width}}px; height:{{item.content.image_height}}px; background-size:{{item.content.size}}" data-url="{{item.content.url}}" bindtap="onimagepreview"></view>
        <!--<view class="im-msg-arrow"></view>-->
        <image src="{{item.sender_info.avatar}}" alt="" class="im-msg-avatar" error="handleImgFailLoad($event)"></image>
      </view>
    </view>
</template>
